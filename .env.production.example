# .env.production.example — Production-safe defaults (ADR-037 / LOT-AUTH-4)
# Copy to .env on production server and fill in secrets.

APP_NAME=Leezr
APP_ENV=production
APP_KEY=              # php artisan key:generate
APP_DEBUG=false
APP_URL=https://leezr.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ─── Database ────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=leezr
DB_USERNAME=             # FILL IN
DB_PASSWORD=             # FILL IN

# ─── Session (security-hardened) ─────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.leezr.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ─── Sanctum ────────────────────────────────────────────
SANCTUM_STATEFUL_DOMAINS=leezr.com,dev.leezr.com

# ─── CORS ────────────────────────────────────────────────
# Falls back to APP_URL if not set. Override for multi-domain setups.
# CORS_ALLOWED_ORIGINS=https://leezr.com

# ─── Queue / Cache ───────────────────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ─── Mail ────────────────────────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=              # FILL IN
MAIL_PORT=587
MAIL_USERNAME=          # FILL IN
MAIL_PASSWORD=          # FILL IN
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@leezr.com
MAIL_FROM_NAME="${APP_NAME}"

# ─── Deployment ─────────────────────────────────────────────
# GitHub webhook secret (same value configured in GitHub repo webhook settings)
GITHUB_WEBHOOK_SECRET=       # FILL IN — must match GitHub webhook secret

# ─── Build Versioning (auto-set by deploy script) ────────
# Deploy script injects: $(git rev-parse --short HEAD)
VITE_APP_VERSION=
APP_BUILD_VERSION=
# Semantic version (auto-set by CI: 1.0.{run_number})
APP_VERSION=dev

# ─── Vite ────────────────────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL=
